mixin controlpanel(options)
  .control-panel
   .control-panel__elem
    label='MIN'
     input(type="text" name="min" placeholder="min" class='control-panel__min'+options.id)
    label='MAX'
     input(type="text" name="max" placeholder="max" class='control-panel__max'+options.id)
    label='FROM'
     input(type="text" name="from" placeholder="from" class='control-panel__from'+options.id)
    label='TO'
     input(type="text" name="to" placeholder="to" class='control-panel__to'+options.id)
    label='IS_RANGE'
     input(type="checkbox", name="isRange" class='control-panel__is-range'+options.id)
    label='HIDE_THUMB_LABEL'
     input(type="checkbox", name="hideThumbLabel" class='control-panel__hide-thumb-label'+options.id)
    button(class='control-panel__update'+options.id)='UPDATE SETTINGS'
    
